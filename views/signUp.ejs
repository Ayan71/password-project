<%-include("header")%>


 
<form action="/users/create" method="post" class="rounded container mt-5 bg-dark p-5 text-light w-50">
  <div class="mb-3">
      <label for="exampleInputName" class="form-label">Name</label>
      <input type="text" name="name" class="form-control" id="exampleInputName" aria-describedby="nameHelp">
      <div id="nameHelp" class="form-text text-warning">Enter your full name.</div>
    </div>
  <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Email address</label>
    <input type="email" name="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
    <div id="emailHelp" class="form-text text-warning">We'll never share your email with anyone else.</div>
  </div>
  <div class="mb-4">
    <label for="exampleInputPassword1" class="form-label">Password</label>
    <input type="password" name="password" class="form-control" id="exampleInputPassword1">
  </div>
  <div class="mb-3">
      <label for="exampleInpuConfirmPassword" class="form-label">Confirm Password</label>
      <input type="password" name="confirmPassword" class="form-control" id="exampleInpuConfirmPassword">
    </div>
  <button type="submit" class="btn btn-primary">Register</button>
</form>
